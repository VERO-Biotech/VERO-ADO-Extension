{
  "manifestVersion": 1,
  "version": "1.0.11",
  "name": "Hot Reload and Debug",
  "description": "Use hot reload and debug directly in VS Code",
  "publisher": "VeroBiotech",
  "demands": ["api-version/3.0"],
  "categories": ["Azure Repos"],
  "targets": [{
    "id": "Microsoft.VisualStudio.Services"
  }],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "icons": {
    "default": "img/world.png"
  },
  "files": [{
      "path": "dist",
      "addressable": true
    },
    {
      "path": "img",
      "addressable": true
    }
  ],
  "contributions": [{
      "id": "hello-world-hub-group",
      "type": "ms.vss-web.hub-group",
      "description": "Sample hub group",
      "targets": ["ms.vss-web.project-hub-groups-collection"],
      "properties": {
        "name": "Hello World!",
        "icon": {
          "dark": "img/world.png",
          "light": "img/world.png"
        }
      }
    },
    {
      "id": "hub",
      "type": "ms.vss-web.hub",
      "targets": [".hello-world-hub-group"],
      "includes": [
        "ms.vss-tfs-web.tfs-page-data-service",
        "ms.vss-features.host-navigation-service",
        "ms.vss-features.extension-data-service",
        "ms.vss-features.host-dialog-service"
      ],
      "properties": {
        "name": "Sample hub",
        "uri": "dist/Hub/Hub.html",
        "icon": "asset://static/sample-icon.png",
        "supportsMobile": true
      }
    },
    {
      "id": "work-item-verification-form-group",
      "type": "ms.vss-work-web.work-item-form-control",
      "targets": ["ms.vss-work-web.work-item-form"],
      "properties": {
        "name": "Verification Group",
        "uri": "dist/WorkItemFormGroup/WorkItemFormGroup.html",
        "height": 600,
        "inputs": [{
            "id": "FieldName",
            "label": "Select the field for this control. This is the only input needed if the field is a picklist field with suggested values.",
            "type": "WorkItemField",
            "properties": {
              "workItemFieldTypes": ["String", "PlainText", "HTML"]
            },
            "validation": {
              "dataType": "String",
              "isRequired": true
            }
          }
        ]
      }
    }
  ]
}